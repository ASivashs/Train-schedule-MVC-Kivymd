#:kivy 2.1.0


<DialogTextField@MDTextField>:
    size_hint: 0.5, 0.1
    input_type: "text"


<DialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "300dp"


<SaveDialogContent>:
    height: "50dp"

    path: save_path

    DialogTextField:
        id: save_path
        hint_text: "Save file name"


<UploadDialogContent>:
    height: "60dp"

    path: upload_path

    DialogTextField:
        id: upload_path
        hint_text: "Load file name"


<InputDialogContent>:
    height: "360dp"

    train_number: input_train_number
    departure_station: input_departure_station
    arrival_station: input_arrival_station

    DialogTextField:
        id: input_train_number
        size_hint: 1, .2
        hint_text: "Train number"

    DialogTextField:
        id: input_departure_station
        size_hint: 1, .2
        hint_text: "Departure station"

    DialogTextField:
        id: input_arrival_station
        size_hint: 1, .2
        hint_text: "Arrival station"

    # Departure time
    BoxLayout:
        size_hint: 1, .2
        spacing: 10

        MDLabel:
            text: "Choose departure time: "

        MDRaisedButton:
            text: "Date"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.input_departure_date_picker()

        MDRaisedButton:
            text: "Time"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_departure_time_picker()

    # Arrival time
    BoxLayout:
        size_hint: 1, .2
        spacing: 10

        MDLabel:
            text: "Choose arrival time: "

        MDRaisedButton:
            text: "Date"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_arrival_date_picker()

        MDRaisedButton:
            text: "Time"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_arrival_time_picker()


<NDDialogContent>:
    height: "120dp"

    number: nd_train_number

    DialogTextField:
        id: nd_train_number
        size_hint: 1, .2
        hint_text: "Train number"

    BoxLayout:
        size_hint: 1, .2
        spacing: 10

        MDLabel:
            text: "Departure date:"

        MDRaisedButton:
            text: "Date"
            pos_hint: {"right": 1}
            on_release: root.nd_departure_date_picker()

        MDRaisedButton:
            text: "Time"
            pos_hint: {"right": 1}
            on_release: root.nd_departure_time_picker()


<DADialogContent>:
    height: "100dp"

    BoxLayout:
        size_hint: 1, .2

        MDLabel:
            text: "Enter departure date range:"

        MDRaisedButton:
            text: "Date range"
            pos_hint: {"right": 1}
            on_release: root.da_departure_date_picker()

    BoxLayout:
        size_hint: 1, .2

        MDLabel:
            text: "Enter arrival date range:"

        MDRaisedButton:
            text: "Date range"
            pos_hint: {"right": 1}
            on_release: root.da_arrival_date_picker()


<DASDialogContent>:
    height: "150dp"

    departure_station: das_departure_station
    arrival_station: das_arrival_station

    DialogTextField:
        id: das_departure_station
        hint_text: "Departure station"
        size_hint: 1, .2

    DialogTextField:
        id: das_arrival_station
        hint_text: "Arrival station"
        size_hint: 1, .2


<TTDialogContent>:
    height: "120dp"

    days: travel_time_days

    DialogTextField:
        id: travel_time_days
        hint_text: "Travel days"
        size_hint: 1, .2

    BoxLayout:
        size_hint: 1, .2

        MDLabel:
            text: "Enter Travel time hours:"

        MDRaisedButton:
            text: "Time"
            pos_hint: {"right": 1}
            on_release: root.travel_time_time_picker()


<FilterDialogContent>:
    height: "360dp"

    MDRaisedButton:
        text: "Train number or departure time"
        size_hint: 1, .25
        on_release: root.number_or_departure_time_filter()

    MDRaisedButton:
        text: "Departure time or arrival time diapason"
        size_hint: 1, .25
        on_release: root.departure_or_arrival_time_filter()

    MDRaisedButton:
        text: "Departure or arrival station"
        size_hint: 1, .25
        on_release: root.departure_or_arrival_station_filter()

    MDRaisedButton:
        text: "Travel time"
        size_hint: 1, .25
        on_release: root.travel_time_filter()


<DeleteDialogContent>:
    height: "360dp"

    MDRaisedButton:
        text: "Train number or departure time"
        size_hint: 1, .25
        on_release: root.number_or_departure_time_filter()

    MDRaisedButton:
        text: "Departure time or arrival time diapason"
        size_hint: 1, .25
        on_release: root.departure_or_arrival_time_filter()

    MDRaisedButton:
        text: "Departure or arrival station"
        size_hint: 1, .25
        on_release: root.departure_or_arrival_station_filter()

    MDRaisedButton:
        text: "Travel time"
        size_hint: 1, .25
        on_release: root.travel_time_filter()
