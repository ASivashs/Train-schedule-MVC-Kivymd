#:kivy 2.1.0


<DialogTextField@MDTextField>:
    size_hint: 0.5, 0.1
    input_type: "text"


<DialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "300dp"


<SaveDialogContent>:
    height: "50dp"

    path: save_path

    DialogWindow:
        id: save_path
        hint_text: "Save file name"


<UploadDialogContent>:
    height: "50dp"

    path: upload_path

    DialogWindow:
        id: upload_path
        hint_text: "Load file name"


<InputDialogContent>:
    height: "360dp"

    train_number: input_train_number
    departure_station: input_departure_station
    arrival_station: input_arrival_station

    DialogWindow:
        id: input_train_number
        size_hint: 1, .2
        hint_text: "Train number"

    DialogWindow:
        id: input_departure_station
        size_hint: 1, .2
        hint_text: "Departure station"

    DialogWindow:
        id: input_arrival_station
        size_hint: 1, .2
        hint_text: "Arrival station"

    # Departure time
    BoxLayout:
        size_hint: 1, .2
        spacing: 10

        MDLabel:
            text: "Choose departure time: "

        MDRaisedButton:
            text: "Date"
            pos_hint: {'center_x': .5, 'center_y': .5}
            on_release: root.input_departure_date_picker()

        MDRaisedButton:
            text: "Time"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_departure_time_picker()

    # Arrival time
    BoxLayout:
        size_hint: 1, .2
        spacing: 10

        MDLabel:
            text: "Choose arrival time: "

        MDRaisedButton:
            text: "Date"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_arrival_date_picker()

        MDRaisedButton:
            text: "Time"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_release: root.input_arrival_time_picker()


<FilterDialogContent>:
    height: "360dp"

    MDRaisedButton:
        text: "Train number or departure time"
        size_hint: 1, .25
        # on_release:

    MDRaisedButton:
        text: "Departure time or arrival time diapason"
        size_hint: 1, .25
        # on_release:

    MDRaisedButton:
        text: "Departure or arrival station"
        size_hint: 1, .25
        # on_release:

    MDRaisedButton:
        text: "Travel time"
        size_hint: 1, .25
        # on_release:


<DeleteDialogContent>:
    height: "380dp"

    product: delete_product
    line_up: delete_line_up
    position: delete_position
    titles: delete_titles
    street: delete_street

    DialogWindow:
        id: delete_product
        hint_text: "Enter Product Name"

    DialogWindow:
        id: delete_line_up
        hint_text: "Enter Manufacturer's name"

    DialogWindow:
        id: delete_position
        hint_text: "Enter Manufacturer's UNP"

    DialogWindow:
        id: delete_titles
        hint_text: "Enter Quantity in stock"

    DialogWindow:
        id: delete_street
        hint_text: "Enter Warehouse address"
